.head
    h3 Edit post
.form.col-md-12
  form.form-horizontal(action='./viewPosts/update' method='post')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='_id', value='#{blogPost._id}')
    .form-group
      label.control-label(for='title')
      input#title.col-md-12.form-control(name='title' type='text' value='#{blogPost.title}')
    .form-group
      textarea#editor.col-md-12.form-control(name='body' rows='15') #{blogPost.body}
    .form-group
      button.col-xs-12.col-md-offset-9.col-md-3.btn.btn-success(type='submit') Update post
  form.form-horizontal(action='./viewPosts/delete' method='post')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='_id', value='#{blogPost._id}')
    .form-group
      button.col-xs-12.col-md-offset-9.col-md-3.btn.btn-danger(type='submit') Delete post